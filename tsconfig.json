{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Define a raiz do projeto como ponto de partida
    "paths": {
      "@public/*": ["public/*"], // Alias para a pasta public
      "@components/*": ["app/components/*"], // Exemplo para componentes
      "@utils/*": ["app/utils/*"], // Exemplo para funções utilitárias
      "@styles/*": ["app/styles/*"] // Exemplo para estilos globais
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
